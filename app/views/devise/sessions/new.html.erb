<%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <h1 >会員情報入力</h1>
    <%= flash[:notice] %>
    <%= flash[:alert] %>

      <label >メールアドレス</label>
      <span >必須</span>
    <%= f.email_field :email, id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>

      <label >パスワード</label>
      <span >必須</span>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワード" %>

  <% if devise_mapping.rememberable? %>
          <%= f.label :remember_me %><br />
          <%= f.check_box :remember_me %>
  <% end -%>

    <%= f.submit "ログイン" ,class:"login-red-btn" %>
<% end %>