<div class="container">
  <h2 class="display-4 py-5" style="padding-top:12px"><u>新規登録<small class="text-muted"><em>-Sign Up-</em></small></u></h2>

  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
    <%= render 'devise/shared/error_messages', model: f.object %>

    <div class="row form-group py-3">
      <div class="col-md-3 col-form-label">
        <%= f.label "ニックネーム" %>
        <span class="badge badge-warning">必須</span>
      </div>
      <div class="col-md-8">
        <%= f.text_field :nickname, placeholder: "例)ニッキtaro", maxlength: "30", class:"form-control"%>
      </div>
    </div>

    <div class="row form-group py-3">
      <div class="col-md-3 col-form-label">
        <%= f.label "メールアドレス" %>
        <span class="badge badge-warning">必須</span>
      </div>
      <div class="col-md-8 ">
        <%= f.email_field :email, placeholder:"例)xxxxx@gmail.com", autofocus: true, autocomplete: "email", class:"form-control"%>
      </div>
    </div>

    <div class="row form-group py-3">
      <div class="col-md-3 col-form-label">
        <%= f.label "パスワード" %>
        <span class="badge badge-warning">必須</span>
      </div>
      <div class="col-md-8">
        <%= f.password_field :password, placeholder:"半角英数字をそれぞれ含む6文字以上になるよう入力して下さい。", autocomplete: "new-password", class:"form-control"%>
      </div>
    </div>
  
    <div class="row form-group py-3">
      <div class="col-md-3 col-form-label">
        <%= f.label "パスワード(確認用)" %>
        <span class="badge badge-warning">必須</span>
      </div>
      <div class="col-md-8">
        <%= f.password_field :password_confirmation,placeholder:"上記パスワードを再度入力して下さい。", autocomplete: "new-password", class:"form-control"%>
      </div>
    </div>

    <div class="form-row form-group py-3">
      <div class="col-md-3 col-form-label">
        <%= f.label "氏名"%>
        <span class="badge badge-warning">必須</span>
      </div>
      <div class="col-md-4">
          <%= f.label "苗字", class:"sr-only" %>
          <%= f.text_field :last_name,placeholder:"苗字", class:"form-control"%>
      </div>
      <div class="col-md-4">
        <%= f.label "名前", class:"sr-only" %>
        <%= f.text_field :first_name,placeholder:"名前", class:"form-control" %>
      </div>
    </div>
  
    <div class="form-row form-group py-3">
      <div class="col-md-3 col-form-label">
        <%= f.label "カナ氏名"%>
        <span class="badge badge-warning">必須</span>
      </div>
      <div class="col-md-4">
        <%= f.label "カナ苗字", class:"sr-only" %>
        <%= f.text_field :lname_kana,placeholder:"カナ苗字", class:"form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.label "カナ名前", class: "sr-only" %>
        <%= f.text_field :fname_kana,placeholder:"カナ名前", class:"form-control" %>
      </div>
    </div>
  
    <div class="form-row form-group py-3">
      <div class="col-md-3 col-form-label">
        <%= f.label "生年月日"%>
        <span class="badge badge-warning">必須</span>
      </div>
      <div class="col-md-8 form-inline">
        <%= raw sprintf(
                    f.date_select(
                      :birthday,
                      class:"form-control",
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>
  
  
    <div class="form-group row justify-content-end" style="padding-bottom:50px">
      <div class="col-md-9">
        <%= f.submit "新規登録", class:"btn btn-dark" %>
      </div>
    </div>
  <%end%>
</div>
