<h2>プロフィール登録</h2>

<%= form_for @profile do |f| %>
  <%= render "devise/shared/error_messages", resource: @profile %>

  <div class="field">
    <%= f.label :about_me %><br />
    <%= f.text_field :about_me %>
  </div>

  <div class="field">
    <%= f.label :sns_id %><br />
    <%= f.collection_select(:sns_id, Sns.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
  </div>

    <div class="field">
    <%= f.label :sns_address %><br />
    <%= f.text_field :sns_address %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>