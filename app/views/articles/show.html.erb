<body>
  <main class="container ">

    <div class="row justify-content-center" style="padding-top:12px">
      <h1 class="col-md-4 display-4 py-5">
        <%= @article.title %>
      </h1>
    </div>
    <div class="row pb-3">
      <p>
        <strong>Text:</strong>
        <%= @article.content %>
      </p>
    </div>

    <div class="row py-3">
      <% if user_signed_in? %>
        <% if current_user.id == @article.user_id %>
          <div class="d-flex justify-content-start">
            <%= link_to '記事の編集', edit_article_path(@article), class:"btn btn-warning" %>
            <%= button_to '記事の削除', article_path(@article), method: :delete, class:"btn btn-danger" %>
          </div>
        <% end %>
      <% end %>
    </div>
  
    <div class="container">
      <%= render 'comments/comment'%>
    </div>
  
    <div class="container py-5">
      <% if user_signed_in? %>
        <%= render 'comments/form'%>
      <% end %>
    </div>
  
      <%= link_to 'トップページに戻る', root_path %>

  </main>
</body>