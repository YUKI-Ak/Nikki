<h2 class="row h2"><新規コメント作成></h2>
  <%= form_with model: [ @article, @article.comments.build ] , local: true do |f| %>
    <p class="form-row">
      <%= f.text_area :comment, class:"form-control",placeholder: "ここにコメントを入力して下さい" %>
    </p>
    <p class="row py-2">
        <%= f.submit "送信", class: "btn btn-primary btn-sm" %>
    </p>
  <% end %>