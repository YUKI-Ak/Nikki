<%= form_with model: @article, url: article_path(@article), local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', root_path %>